<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Background">
        <item name="android:background">#80FFFFF0</item>
    </style>
    <style name="BackgroundImage">
        <item name="android:background">@drawable/bg_stags</item>
        <item name="android:alpha">0.05</item>
        <item name="android:tint">#333333</item>
        <item name="android:gravity">center</item>
    </style>


<!-- HOME -->
    <style name="HomeGreetings">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="HomeProfileName">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">#DA261D</item>
    </style>
    <style name="HomeProfileImage">
        <item name="android:background">#FFFFF0</item>
    </style>


    <!-- CARD -->
        <style name="HomeProfileCard">
            <item name="android:elevation">10dp</item>
            <item name="android:layout_marginTop">20dp</item>
            <item name="android:layout_margin">8dp</item>
        </style>
        <style name="HomeProfileCardTitle">
            <item name="android:textColor">#E6FFFFFF</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textSize">12sp</item>
        </style>
        <style name="HomeProfileCardBalanceTitle">
            <item name="android:textColor">#E6FFFFFF</item>
            <item name="android:textSize">12sp</item>
        </style>
        <style name="HomeProfileCardBalance">
            <item name="android:textColor">#E6FFFFFF</item>
            <item name="android:textSize">17sp</item>
        </style>
        <style name="HomeProfileCardId">
            <item name="android:textColor">#E6FFFFFF</item>
            <item name="android:textSize">17sp</item>
        </style>
        <style name="HomeProfileCardName">
            <item name="android:textColor">#E6FFFFFF</item>
            <item name="android:textSize">12sp</item>
            <item name="android:textAllCaps">true</item>
        </style>
        <style name="HomeProfileCardVisible">
            <item name="android:tint">#E6FFFFFF</item>
            <item name="android:layout_gravity">center</item>
        </style>
        <style name="HomeProfileCardLogo">

            <item name="android:textColor">#E6FFFFFF</item>
            <item name="android:alpha">0.1</item>
        </style>


    <!-- CARD NAVIGATION -->
        <style name="NavContainer">
            <item name="android:background">@drawable/background_navbar</item>
            <item name="android:elevation">8dp</item>
        </style>
        <style name="NavItem">
            <item name="android:layout_weight">1</item>
            <item name="android:padding">10dp</item>
        </style>
        <style name="NavImage">
            <item name="android:layout_height">25dp</item>
            <item name="android:tint">#333333</item>
        </style>
        <style name="NavText">
            <item name="android:textColor">#333333</item>
            <item name="android:textSize">12sp</item>
            <item name="android:gravity">center</item>
        </style>
        <style name="ActiveNavImage">
            <item name="android:tint">#E6FFFFFF</item>
        </style>
        <style name="ActiveNavText">
            <item name="android:textColor">#E6FFFFFF</item>
            <item name="android:textSize">12sp</item>
            <item name="android:gravity">center</item>
        </style>




<!-- DASH BOARD CARD NAV -->

    <style name="HomeCardNavContainer">
        <item name="android:padding">10dp</item>
    </style>

    <style name="HomeCardNavItem">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="ActiveHomeCardNavItem">
        <item name="android:tint">#FFFFF0</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="HomeCardNavImage">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_red_circle</item>
        <item name="android:maxHeight">40dp</item>
        <item name="android:tint">#FFFFF0</item>
    </style>

    <style name="HomeCardNavText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">12sp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center</item>
    </style>

<!-- DASH BOARD CARD NAV -->


    <style name="HeaderContainer">
        <item name="android:elevation">200dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="HeaderImage">
        <item name="android:tint">#FFFFF0</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="HeaderText">
        <item name="android:textColor">#FFFFF0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>



<!-- PROFILE -->
    <style name="ProfileImage">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="ProfileName">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ProfileEmail">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="ProfileItem">
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    <style name="ProfileItemImage">
        <item name="android:tint">#FFFFF0</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="ProfileItemText">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="ProfileItemNext">
        <item name="android:tint">#333333</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="ProfileDivider">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>


    <style name="BackgroundOthers">
        <item name="backgroundColor">#80AF1B1B</item>
    </style>




    <style name="FormItemContainer">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <style name="FormTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#DA261D</item>
        <item name="backgroundColor">#80AF1B1B</item>
    </style>
    <style name="FormEditText">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/from_edittext</item>
    </style>
    <style name="FormTextButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/button_gold</item>
    </style>





    <style name="TransferConfirmationTable">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">#E6FFFFFF</item>
        <item name="android:background">@drawable/background_home_card</item>
    </style>
    <style name="TransferConfirmationTableRow">
        <item name="android:textColor">#E6FFFFFF</item>
    </style>
    <style name="TransferConfirmationTableText">
        <item name="android:textColor">#E6FFFFFF</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>



    <style name="AuthCodeDisplay">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_authcodedisplay</item>
    </style>


    <style name="KeypadCell">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="KeypadCellValue">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ReceiptTableRow">

    </style>
    <style name="ReceiptTableText">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>





</resources>